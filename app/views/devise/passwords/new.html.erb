<div class="page-container">
  <div class="form-container">
    <div class="tag-container header-container"><%= image_tag "docreflogo.png", class: 'logo-container' %><div id="text-logo">DocRef</div></div>
    <h3 class="header-container">Forgot your password?</h3>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: false, placeholder: 'Email',
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: "btn-mint" %>
    </div>

    <% end %>

  </div>
</div>
