<div class="page-container">
  <div class="form-container">
    <div class="tag-container header-container"><%= image_tag "docreflogo.png", class: 'logo-container' %><div id="text-logo">DocRef</div></div>
    <h3 class="header-container">Welcome back!</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, label: false, placeholder: 'Email',
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password, label: false, placeholder: 'Password',
      required: false,
      input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn-mint" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
