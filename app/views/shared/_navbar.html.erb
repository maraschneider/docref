<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="tag-container">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "docreflogo.png" %>
    <% end %>
    <p>DocRef</p>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="navbar_menu light_gray_style">
    <% if user_signed_in? %>
      <ul>
        <li><a href="#">Find Doctors</a></li>
        <li><a href="#">Option #2</a></li>
        <li><a href="#">Option #3</a></li>
        <li><a href="#">Option #4</a></li>
      </ul>
    <% else %>
      <ul>
        <li><a href="#">Find Doctors</a></li>
        <li><a href="#">Option #2</a></li>
        <li><a href="#">Option #3</a></li>
        <li><a href="#">Sign up</a></li>
      </ul>
    <% end %>
  </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "#{current_user.title} #{current_user.first_name} #{current_user.last_name}", "#", class: "nav-link text_mint" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "profile.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
          <li>
            <%= link_to "Doctor Login", new_user_session_path, class: "btn-outline" %>
          </li>
      <% end %>
    </ul>
  </div>
</div>
