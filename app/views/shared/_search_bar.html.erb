<div>
  <%= form_tag doctors_path, method: :get, class: "two-field-search-container" do %>
    <%= text_field_tag :specialty_or_field,
      params[:specialty_or_field],
      class: "input-field",
      placeholder: "cardiologist"
    %>
    <div class="location_input">
    <%= text_field_tag :location,
      params[:location],
      class: "input-field",
      id: "doc_address",
      placeholder: "Berlin Mitte"
    %>
    </div>
    <%= submit_tag "Search", class: "btn-mint" %>
  <% end %>
</div>
