<div class="card-doc">
  <div>
    <h4><%=doctor.full_name_with_title%></h4>
    <div class="additional_info"><%= doctor.position_specialty_clinic %></div>
    <% if doctor.clinic %>
      <div class="additional_info"><%= doctor.clinic.address%></div>
    <% end %>
  </div>
  <div>
    <%= image_tag "profile.png", alt: "profile_picture", class:"avatar-square" %>
  </div>
  <div>
    <% if current_user %>
      <div class="left-btn-position">
        <%= link_to "Recommend",
            new_doctor_approval_path(doctor),
            class: "btn-outline btn-narrow hidden"
        %>
      </div>
    <% end %>
  </div>
  <div>
    <%= link_to "Profile", doctor_path(doctor), class: "btn-outline"%>
  </div>
</div>
