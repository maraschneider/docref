<!-- Do not delete the outer div!!! -->

<div id="search-results">
  <% if @approvals.empty? %>
    <br>
    <p>No recommendations found.</p>
  <% else %>
    <% @approvals.each do |approval| %>
    <div class="card-approval">
      <div class="approval-header">
        <h4><%= '"' + approval.headline + '"' %></h4>
        <%= image_tag "profile.png", alt: "Doctor Avatar", class: "avatar-medium" %>

      </div>

      <div class="card-verification">
        <p style="margin-bottom: 0;"> By a verified doctor in
          <% recommender = User.find { |user| approval.giver_id == user.id } %>
          <%= recommender.specialties.first[:name]%> on
          <%= "#{approval.created_at.strftime("%d")}" + " #{@months[approval.created_at.month]} " + "#{approval.created_at.strftime("%Y")}" %>
        </p>
        <p style="margin-bottom: 0;">Recommended for:</p>
      </div>


      <div class="d-flex flex-wrap">
        <% approval.fields.each do |field|  %>
        <div class="tag-outline tag"><%= field.name %></div>
        <% end %>
        <div><p><%= approval.content %></p></div>

      </div>
    </div>

    <% end %>
  <% end %>
</div>

<div class="d-flex justify-content-between">
  <div>Hallo</div>
  <div>Test</div>
</div>




<p class="info">Recommended for</p>
