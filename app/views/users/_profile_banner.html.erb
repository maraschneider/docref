<div class="profile-banner">
  <div>
    <%= image_tag @doctor.profile_picture, id: "profile-pic", class: "avatar-square-profile" %>
  </div>
  <div class="doctor-titles">
    <div class="doctor-name">
      <h1>
        <%= @doctor.title + " "%>
          <strong>
            <%= @doctor.first_name + " " + @doctor.last_name%>
          </strong>
      </h1>
    </div>
    <div class="doctor-position">
      <h5>
        <%= @doctor.position + " in " + @doctor.specialties.first[:name] + " at " + @doctor.clinic.name %>
      </h5>
    </div>
  </div>
  <div>
    <%= link_to "Back", doctors_path, class: "btn-mint" %>
  </div>
</div>
